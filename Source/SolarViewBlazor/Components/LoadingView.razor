@using Syncfusion.Blazor.Spinner

<SfSpinner CssClass="e-customClass" Label="Loading..." @bind-Visible="@SpinnerVisible">
  <SpinnerEvents Created="OnSpinnerCreated"></SpinnerEvents> 
</SfSpinner>

@code {
  private bool SpinnerVisible { get; set; }

  private void OnSpinnerCreated()
  {
    SpinnerVisible = true;
  }
}
