  private async Task DeleteChart()
  {
    await Parent.DeleteChart(ChartData.Id);
  }

  private void OnUnitChange(Syncfusion.Blazor.DropDowns.ChangeEventArgs<PowerUnit> args)
  {
    _selectedUnit = args.Value;
    CalculateChartData();
  }
