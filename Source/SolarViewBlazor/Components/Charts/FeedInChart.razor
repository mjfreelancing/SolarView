  protected override void OnInitialized()
  {
    base.OnInitialized();
    CalculateChartData();
  }

  private void CalculateChartData()
  {
    if (_cumulativeMode)
    {
      var lastPowerItem = new PowerData { Watts = new WattsData() };

      _timeFeedIn = ChartData.Power
      .Select(powerData =>
      {
        var scaledData = _selectedUnit == PowerUnit.Watts
          ? WattsDataHelpers.Scale(powerData.Watts, 0.001d)
          : WattsDataHelpers.Scale(powerData.WattHour, 0.001d);

        lastPowerItem.Watts = WattsDataHelpers.Aggregate(lastPowerItem.Watts, scaledData);

        return new TimeFeedIn(powerData.Time, lastPowerItem.Watts.FeedIn);
      })
      .AsReadOnlyList();
    }
    else
    {
      _timeFeedIn = ChartData.Power
        .Select(item =>
        {
          var wattData = _selectedUnit == PowerUnit.Watts
            ? item.Watts
            : item.WattHour;

          return new TimeFeedIn(item.Time, wattData.FeedIn);
        })
        .AsReadOnlyList();
    }

    //CalculateChartLimits()
  }

